<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ParentConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/featuredRecipeView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/HorizontalScrollView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView1"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toTopOf="@+id/HorizontalScrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/featuredRecipeView">

                <LinearLayout
                    android:id="@+id/horizontalLinearLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/themedRecipe1"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:src="@color/purple_200" />

                    <ImageView
                        android:id="@+id/themedRecipe2"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/purple_500" />

                    <ImageView
                        android:id="@+id/themedRecipe3"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/purple_700" />

                    <ImageView
                        android:id="@+id/themedRecipe4"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/teal_200" />
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:id="@+id/HorizontalScrollView2"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/HorizontalScrollView1">

                <LinearLayout
                    android:id="@+id/horizontalLinearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/themedRecipe5"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/teal_700" />

                    <ImageView
                        android:id="@+id/themedRecipe6"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/teal_200" />

                    <ImageView
                        android:id="@+id/themedRecipe7"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/purple_700" />

                    <ImageView
                        android:id="@+id/themedRecipe8"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@color/purple_500" />
                </LinearLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>