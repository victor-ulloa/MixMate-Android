<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inventoryFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inventory.InventoryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/itemCategoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:tag="@string/spirit">

                <ImageView
                    android:id="@+id/itemCategory1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAlignBottom="true"
                    android:src="@color/purple_200" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:text="@string/spirit" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/FrameLayout2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:tag="@string/bitters">

                <ImageView
                    android:id="@+id/itemCategory2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAlignBottom="true"
                    android:src="@color/purple_500" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:text="@string/bitters"
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/FrameLayout3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:tag="@string/syrup">

                <ImageView
                    android:id="@+id/itemCategory3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAlignBottom="true"
                    android:src="@color/purple_700" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:text="@string/syrup"
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/FrameLayout4"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:tag="@string/juice">

                <ImageView
                    android:id="@+id/itemCategory4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAlignBottom="true"
                    android:src="@color/teal_200" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|left"
                    android:text="@string/juice" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>